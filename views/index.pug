extends layout

block content
  if movies && movies.length
    h2 Movie List
    ul
      each m in movies
        li
          strong= m.title
          |  — 
          span.muted #{m.year}
          |  · 
          span.pill #{m.rating}
  else
    p.muted No movies yet. Click “Seed” above.

  h3 Add a movie
  form(action="/movies" method="post")
    .row
      label(for="title") Title
      input(type="text" id="title" name="title" placeholder="Interstellar" required)
    .row
      label(for="year") Year
      input(type="number" id="year" name="year" placeholder="2014" required)
    .row
      label(for="rating") Rating
      select(id="rating" name="rating" required)
        option(value="G") G
        option(value="PG") PG
        option(value="PG-13") PG-13
        option(value="R") R
        option(value="NC-17") NC-17
        option(value="Unrated") Unrated
    button(type="submit") Add
